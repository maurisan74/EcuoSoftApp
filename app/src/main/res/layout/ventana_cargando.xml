<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    app:cardBackgroundColor="@color/LightGray"    app:cardCornerRadius="6dp"    app:cardElevation="4dp"    app:contentPadding="10dp"    android:focusable="true"    android:clickable="true"    android:id="@+id/cvVista2">    <LinearLayout android:layout_width="match_parent"        android:orientation="vertical"        android:layout_height="wrap_content">        <TextView            android:layout_gravity="center_horizontal"            android:textAlignment="center"            android:text="@string/Cargando"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="15sp"            android:textColor="@color/colorPrimaryDark"/>        <ProgressBar            style="?android:attr/progressBarStyle"            android:layout_width="match_parent"            android:layout_height="33dp"            android:id="@+id/progressBar"/>        <TextView            android:layout_gravity="center_horizontal"            android:text="@string/Aguarde"            android:textSize="10sp"            android:textAlignment="center"            android:layout_margin="10dp"            android:layout_marginStart="10dp"            android:textColor="@color/colorPrimaryDark"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>    </LinearLayout></androidx.cardview.widget.CardView>